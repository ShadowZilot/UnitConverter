<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.converting.MainActivity">

    <EditText
        android:id="@+id/unit_input_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/type_unit_value_label"
        android:inputType="numberSigned"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unit_first_selector"/>

    <Spinner
        android:id="@+id/unit_first_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/unit_input_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/unit_input_first"/>

    <EditText
        android:id="@+id/unit_input_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/type_unit_value_label"
        android:inputType="numberSigned"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unit_input_first"
        app:layout_constraintEnd_toStartOf="@id/unit_first_selector"/>

    <Spinner
        android:id="@+id/unit_second_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/unit_input_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/unit_input_second"/>

</androidx.constraintlayout.widget.ConstraintLayout>